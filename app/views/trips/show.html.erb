  <% @trip.details.each do |detail| %> 
  <li><%=detail.name %> </li>
  <% end %>
  </ul>


<h3>Please note:</h3> 
  <ul>
  	
  	<li> For full pricing and availability, please contact - <%= mail_to "emils.veveris@thrillengine.com", "emils.veveris@thrillengine.com" %>  </li>
  </ul>


</div>



<div class="description">

<h3>Brief Description:</h3>
 
<p>
 
  <%= @trip.description %>
</p>	
	
</div>	
	

<h3>Pricing:</h3>
 
<div class="pricing">



<h4> ACCOMMODATION/PACKAGE </h4>
<table id="accomodation">

<tr>

<th>Type</th>
<th>Price</th>
</tr> 

<% for accomodation in @trip.accomodations %>
<tr>

<td> <b><%= accomodation.name %> </b> - <%= accomodation.description %> </td>
<td>   <i>  <%= accomodation.price1 %>  </br> <%= accomodation.price2 %> </br> <%= accomodation.price3 %> </td> </i>

</tr>

<% end %>
</table>


 
<h4> EXTRAS </h4>
<table id="extras">
<tr>
<th>Type</th>
<th>Price</th>
</tr>
<% for lesson in @trip.lessons %>
<tr>
<td> <%= lesson.name %> </td>
<td> <i> <%= lesson.description %> </i>  </td>
</tr>
<% end %>
</table>



