<% if signed_in? %>
<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Trip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    
    
   <td> <% location.trips.each do |trip| %>
    <%=link_to trip.title, trip %>
    <% end %> </td>
    
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= button_to "delete", location, :method=>:delete, :class=>:destroy %> </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location', new_location_path %>
<% end %>