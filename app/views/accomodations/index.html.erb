<h1>Listing accomodations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price1</th>
    <th>Price2</th>
    <th>Price3</th>
    <th>Price4</th>
    <th>Price5</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accomodations.each do |accomodation| %>
  <tr>
    <td><%= accomodation.name %></td>
    <td><%= accomodation.description %></td>
    <td><%= accomodation.price1 %></td>
    <td><%= accomodation.price2 %></td>
    <td><%= accomodation.price3 %></td>
    <td><%= accomodation.price4 %></td>
    <td><%= accomodation.price5 %></td>
    <td><%= link_to 'Show', accomodation %></td>
    <td><%= link_to 'Edit', edit_accomodation_path(accomodation) %></td>
    <td><%= link_to 'Destroy', accomodation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

